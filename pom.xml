		<dependency>
			<groupId>com.github.beamline</groupId>
			<artifactId>conformance-behavioural-patterns</artifactId>
			<version>0.0.2</version>
		</dependency>
		<dependency>
			<groupId>com.github.beamline</groupId>
			<artifactId>simulation-plg</artifactId>
			<version>0.0.2</version>
		</dependency>

