	<dependencies>
		<dependency>
			<groupId>com.github.beamline</groupId>
			<artifactId>framework</artifactId>
			<version>0.2.1</version>
		</dependency>
		<dependency>
			<groupId>com.github.beamline</groupId>
			<artifactId>discovery-trivial</artifactId>
